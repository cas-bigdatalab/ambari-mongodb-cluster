<?xml version="1.0"?>
<metainfo>
  <schemaVersion>2.0</schemaVersion>
  <services>
    <service> 
      <name>MONGODB</name>
      <displayName>MongoDB</displayName>
      <comment>The intermediate database in your lambda stack</comment>
      <version>3.2</version>
      <components>
        <component>
          <name>MONGODB</name>
          <displayName>MONGODB</displayName>
          <category>SLAVE</category>
		  <cardinality>3+</cardinality>
          <commandScript>
            <script>scripts/mongo_db.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
        </component>
        <component>
          <name>MONGODC</name>
          <displayName>MONGOD CONFIG</displayName>
          <category>SLAVE</category>
		  <cardinality>3+</cardinality>
          <commandScript>
            <script>scripts/mongo_config.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
        </component>
		<component>
          <name>MONGODS</name>
          <displayName>MONGOS</displayName>
          <category>SLAVE</category>
		  <cardinality>1+</cardinality>
          <commandScript>
            <script>scripts/mongos.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
        </component>
        <component>
          <name>MONGODB_CLIENT</name>
          <displayName>MongoDB Client</displayName>
          <category>CLIENT</category>
          <commandScript>
            <script>scripts/mongo_client.py</script>
            <scriptType>PYTHON</scriptType>
            <timeout>600</timeout>
          </commandScript>
        </component>
          <!--MMS-->
          <component>
              <name>OPS_SERVER</name>
             <displayName>OpsServer</displayName>
             <category>SLAVE</category>
             <cardinality>1</cardinality>
              <versionAdvertised>true</versionAdvertised>
              <reassignAllowed>true</reassignAllowed>
              <auto-deploy>
                <enabled>true</enabled>
                <co-locate>MONGODB/MONGODB</co-locate>
              </auto-deploy>
             <commandScript>
                 <script>scripts/mms_server.py</script>
                 <scriptType>PYTHON</scriptType>
                 <timeout>600</timeout>
             </commandScript>
         </component>
         <component>
              <name>OPS_SERVER_AGENT</name>
             <displayName>OpsServerAgent</displayName>
             <category>SLAVE</category>
             <cardinality>1+</cardinality>
             <versionAdvertised>true</versionAdvertised>
             <reassignAllowed>true</reassignAllowed>
             <auto-deploy>
                <enabled>true</enabled>
                <co-locate>MONGODB/MONGODB</co-locate>
              </auto-deploy>
             <commandScript>
                 <script>scripts/mms_agent.py</script>
                 <scriptType>PYTHON</scriptType>
                 <timeout>600</timeout>
             </commandScript>
         </component>

      </components>

      <osSpecifics>
        <osSpecific>
          <osFamily>redhat5,redhat6,redhat7</osFamily>
          <packages>
            <package>
              <name>glibc</name>
            </package>
          </packages>
        </osSpecific>
      </osSpecifics>
      <quickLinksConfigurations>
          <quickLinksConfiguration>
              <fileName>quicklinks.json</fileName>
              <default>true</default>
          </quickLinksConfiguration>
      </quickLinksConfigurations>

      <configuration-dependencies>
          <config-type>mongodb</config-type>
          <config-type>mmsagent</config-type>
          <config-type>mmsserver</config-type>
      </configuration-dependencies>

    </service>
  </services>
</metainfo>
